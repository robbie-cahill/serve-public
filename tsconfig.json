{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021", "es2022" ],
        "esModuleInterop": true,
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true
    },
    "exclude": [
        "cjs",
        "node_modules",
        "dist"
    ]
}